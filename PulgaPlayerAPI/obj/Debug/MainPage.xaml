<Page
    x:Class="PulgaPlayerAPI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PulgaPlayerAPI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="400"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListView
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="3" 
            Grid.Column="0"
        >
            <Image x:ConnectionId='5' 
            x:Name ="imagePrev"
            Source="Resources/Backward.jpg" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="3" 
            Grid.Column="0"
            Stretch = "UniformToFill"
            Width = "70"
            Height = "70"
                                     
            />
        </ListView>

        <ListView
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="3" 
            Grid.Column="1"
        >
            <Image x:ConnectionId='4' 
            x:Name ="imagePause"
            Source="Resources/Pause.jpg" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="3" 
            Grid.Column="1"
            Stretch = "UniformToFill"
            Width = "70"
            Height = "70"
                                      
        />
        </ListView>

        <ListView
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="3" 
            Grid.Column="2"  
        >
            <Image x:ConnectionId='3' 
            x:Name ="imageNext"
            Source="Resources/Forward.jpg" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="3" 
            Grid.Column="2"
            Stretch = "UniformToFill"
            Width = "70"
            Height = "70"
                                     
        />
        </ListView>
        
        <ListBox 
            x:Name ="audioView"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Grid.Row="1" 
            Grid.ColumnSpan="3"           
            Width = "380"
            SelectionMode="Extended"
            Background="Transparent"
            Foreground="White" >

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock x:ConnectionId='2'
                        Text="{Binding title}"
                        Tag="{Binding URL}"
                                                 
                    />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox x:ConnectionId='1' 
            x:Name ="textRequest"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="0" 
            Grid.ColumnSpan="3"           
            Width = "380"
            Height="39"
            Text=""
            TextWrapping="Wrap"                                      
        />
        <MediaElement 
            x:Name ="Player"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"         
            Width = "100"
            Height="100"           
        />
        <ProgressBar 
            x:Name ="ProgressPos"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"         
            Width = "380"
            Grid.Row="2" 
            Grid.ColumnSpan="3" 
            Maximum="{Binding ElementName = Player,
                              Path = NaturalDuration.TimeSpan.TotalSeconds}"
            Value="{Binding ElementName = Player,
                            Path = Position.TotalSecond,
                            Mode = TwoWay}" Foreground="#FFC859CD"            
        />

        <Grid.Background>   
            <ImageBrush
                Stretch = "UniformToFill"
                ImageSource ="Resources/BackGround.jpg"
            />
        </Grid.Background>
    </Grid>

</Page>


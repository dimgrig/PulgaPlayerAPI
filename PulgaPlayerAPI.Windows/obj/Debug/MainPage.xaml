<Page
    x:Class="PulgaPlayerAPI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PulgaPlayerAPI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="350"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListView
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="4" 
            Grid.Column="0"
            SelectionMode="None"
        >
            <Image x:ConnectionId='6' 
            x:Name ="imagePrev"
            Source="Resources/Backward.png" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="4" 
            Grid.Column="0"
            Stretch = "UniformToFill"
            Width = "70"
            Height = "70"
                                     
            />
        </ListView>

        <ListView
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="4" 
            Grid.Column="1"
            SelectionMode="None"
        >
            <Image x:ConnectionId='5' 
            x:Name ="imagePause"
            Source="Resources/Pause.png" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="4" 
            Grid.Column="1"
            Stretch = "UniformToFill"
            Width = "70"
            Height = "70"
                                      
        />
        </ListView>

        <ListView
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="4" 
            Grid.Column="2"  
            SelectionMode="None"
        >
            <Image x:ConnectionId='4' 
            x:Name ="imageNext"
            Source="Resources/Forward.png" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="4" 
            Grid.Column="2"
            Stretch = "UniformToFill"
            Width = "70"
            Height = "70"
                                     
        />
        </ListView>

        <ListBox 
            x:Name ="audioView"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Grid.Row="1" 
            Grid.ColumnSpan="3"           
            Width = "380"
            SelectionMode="Extended"
            Background="Transparent"
            Foreground="White" >

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock x:ConnectionId='3'
                        Text="{Binding title}"
                        Tag="{Binding URL}"
                                                 
                    />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox x:ConnectionId='1' 
            x:Name ="textRequest"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="0" 
            Grid.ColumnSpan="3"           
            Width = "380"
            Height="39"
            Text=""
            TextWrapping="Wrap"                                      
        />
        <MediaElement 
            x:Name ="Player"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"         
            Width = "100"
            Height="100"     
            Volume ="{Binding ElementName = Volume,
                            Path = Value,
                            Mode = TwoWay}" 
        />
        <Slider x:ConnectionId='2' 
            x:Name ="ProgressPos"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"         
            Width = "380"
            Height = "50"
            Grid.Row="2" 
            Grid.ColumnSpan="3"            
                                                 
            ManipulationMode="All"
            Foreground="#FFC5492E" 
            Maximum="{Binding ElementName = Player,
                              Path = NaturalDuration.TimeSpan.TotalSeconds,
                              Mode=TwoWay}" IsThumbToolTipEnabled="False"
        />
        <Slider 
            x:Name ="Volume"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"         
            Width = "380"
            Height = "100"
            Grid.Row="3" 
            Grid.ColumnSpan="3" 
            Maximum="1" 
            Foreground="#FFC5492E"
            StepFrequency="0.01" 
            IsThumbToolTipEnabled="False"
        />
        <TextBlock 
            x:Name="currentTime" 
            VerticalAlignment="Bottom"  
            HorizontalAlignment="Left" 
            Grid.Row="2" 
            Grid.Column="0" 
            TextWrapping="Wrap" 
            Text="TextBlock"  
            Height="15" 
            Width="60" 
            FontSize="14" 
            Margin="8,0,0,60"
        />
        <TextBlock 
            x:Name="durationTime" 
            VerticalAlignment="Top"  
            HorizontalAlignment="Right" 
            Grid.Row="2" 
            Grid.Column="3" 
            TextWrapping="Wrap" 
            Text="TextBlock"  
            Height="15" 
            Width="60" 
            FontSize="14"
        />
        <Grid.Background>
            <ImageBrush
                Stretch = "UniformToFill"
                ImageSource ="Resources/BackGround.jpg"
            />
        </Grid.Background>
    </Grid>

</Page>

